@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label for="ID">ID</label>
    <input type="text" name="IdEquipe" required>

    <label for="Nome">Nome</label>
    <input type="text" name="Nome" required>

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" required>

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>

    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px"></td>
                <td> <a asp-area = "" asp-controller = "Equipe" asp-action = "Excluir" asp-route-id = "@equipe.IdEquipe">Excluir</a> </td>
            </tr>
        }
    </tbody>

</table>