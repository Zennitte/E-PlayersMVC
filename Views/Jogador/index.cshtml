@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<form action='@Url.Action("Cadastrar")' method="POST">

    <label for="IdJogador">ID</label>
    <input type="text" name="IdJogador" required>

    <label for="Nome">Nome</label>
    <input type="text" name="Nome" required>

    <label for="IdEquipe">IdEquipe</label>
    <input type="text" name="IdEquipe" required>

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>IdEquipe</th>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogadores)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.IdEquipe</td>
                <td> <a asp-area = "" asp-controller = "Jogador" asp-action = "Excluir" asp-route-id = "@jogador.IdJogador"></a></td>
            </tr>
        }
    </tbody>

</table>