@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form class = "cadastro" action='@Url.Action("Cadastrar")' method="POST">

    <div class="campo">
        <label for="IdJogador">ID</label>
        <input type="text" name="IdJogador" required>
    </div>

    <div class="campo">
        <label for="Nome">Nome</label>
        <input type="text" name="Nome" required>
    </div>

    <div class="campo">
        <label for="IdEquipe">IdEquipe</label>
        <input type="text" name="IdEquipe" required>
    </div>

    <div class="campo">
        <label for="Email">Email</label>
        <input type="email" name="Email" required>
    </div>

    <div class="campo">
        <label for="Senha">Senha</label>
        <input type= "password" name="Senha" required>
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogadores)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td> <a asp-area = "" asp-controller = "Jogador" asp-action = "Excluir" asp-route-id = "@jogador.IdJogador">Excluir</a></td>
            </tr>
        }
    </tbody>

</table>